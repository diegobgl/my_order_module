<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="order_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <!-- Header con los datos de la compañía alineados a la izquierda -->
                <div class="page" style="width: 100%; padding: 10px;">

                    <div class="header" style="display: flex; justify-content: space-between;">
                        <div class="company-info" style="text-align: left;">
                            <h3>Compañía: <t t-esc="doc.company_id.name"/></h3>
                            <p>Dirección: <t t-esc="doc.company_id.street or ''"/> <t t-esc="doc.company_id.city or ''"/></p>
                            <p>Teléfono: <t t-esc="doc.company_id.phone or ''"/></p>
                        </div>
                    </div>

                    <!-- Datos de la Orden -->
                    <div class="row" style="margin-bottom: 20px;">
                        <div style="text-align: left;">
                            <h2 style="margin: 0;">Orden de Trabajo: <t t-esc="doc.title or 'Sin título'"/></h2>
                        </div>
                        <div style="text-align: right;">
                            <h4 style="margin: 0;">Fecha: <t t-esc="doc.date or ''"/></h4>
                            <h4 style="margin: 0;">Cliente: <t t-esc="doc.client_id.name or ''"/></h4>
                        </div>
                    </div>

                    <!-- Tabla de productos -->
                    <div class="row">
                        <h4>Productos</h4>
                        <table class="table table-sm" style="width: 100%; border-collapse: collapse; font-size: 12px;">
                            <thead>
                                <tr>
                                    <th style="text-align: left;">Producto</th>
                                    <th style="text-align: left;">Cantidad</th>
                                    <th style="text-align: left;">Precio</th>
                                    <th style="text-align: left;">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.product_ids" t-as="line">
                                    <tr>
                                        <td><t t-esc="line.product_id.name or 'N/A'"/></td>
                                        <td><t t-esc="line.quantity or 0"/></td>
                                        <td><t t-esc="line.price_unit or 0.0"/></td>
                                        <td><t t-esc="line.subtotal or 0.0"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <!-- Total -->
                    <div class="row" style="text-align: right; margin-top: 20px;">
                        <h3>Total: <t t-esc="doc.value or 0.0"/></h3>
                    </div>

                    <!-- Imágenes Adjuntas -->
                    <div class="row" style="margin-top: 20px;">
                        <h4>Imágenes Adjuntas:</h4>
                        <div style="display: flex; flex-wrap: wrap; gap: 10px;">
                            <t t-foreach="doc.image_ids" t-as="image">
                                <div style="max-width: 200px; max-height: 200px; overflow: hidden;">
                                    <img t-att-src="'data:image/png;base64,' + image.image.decode('utf-8')" alt="Imagen adjunta" style="max-width: 100%; max-height: 100%;"/>
                                </div>
                            </t>
                        </div>
                    </div>

                    <!-- Estilos internos -->
                    <style>
                        .page {
                            width: 100%;
                            max-width: 100%;
                            box-sizing: border-box;
                            page-break-after: auto;
                        }
                        table {
                            width: 100%;
                            border-collapse: collapse;
                        }
                        th, td {
                            border: 1px solid #ddd;
                            padding: 8px;
                        }
                        .header {
                            margin-bottom: 20px;
                        }
                    </style>
                </div>
            </t>
        </t>
    </template>

    <!-- Registro del reporte -->
    <record id="action_report_work_order" model="ir.actions.report">
        <field name="name">Orden de Trabajo</field>
        <field name="model">work.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">my_order_module.order_report_template</field>
        <field name="print_report_name">'Orden de Trabajo - ' + (object.title or '')</field>
    </record>
</odoo>
