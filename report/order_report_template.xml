<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="order_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <!-- Verificación de `company_id` en el modelo -->
                    <t t-set="company" t-value="doc.company_id or company"/>
                    <div class="page">
                        <!-- Cabecera de la orden -->
                        <div class="row">
                            <div class="col-12">
                                <h2>Orden de Trabajo: <t t-esc="doc.title or 'Sin título'"/></h2>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <h4>Fecha: <t t-esc="doc.date or ''"/></h4>
                                <h4>Cliente: <t t-esc="doc.client_id.name or ''"/></h4>
                            </div>
                        </div>

                        <!-- Tabla de productos, ajustada al 100% del ancho -->
                        <div class="row mt32">
                            <h4>Productos</h4>
                            <table class="table table-sm" style="width: 100%; text-align: left; border: 1px solid #ddd;">
                                <thead>
                                    <tr>
                                        <th style="text-align: left;">Producto</th>
                                        <th style="text-align: left;">Cantidad</th>
                                        <th style="text-align: left;">Precio</th>
                                        <th style="text-align: left;">Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="doc.product_ids" t-as="line">
                                        <tr>
                                            <td style="text-align: left;"><t t-esc="line.product_id.name or 'N/A'"/></td>
                                            <td style="text-align: left;"><t t-esc="line.quantity or 0"/></td>
                                            <td style="text-align: left;"><t t-esc="line.price_unit or 0.0"/></td>
                                            <td style="text-align: left;"><t t-esc="line.subtotal or 0.0"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>

                        <!-- Total de la orden, alineado a la izquierda -->
                        <div class="row mt32">
                            <div class="col-12">
                                <h3>Total: <t t-esc="doc.value or 0.0"/></h3>
                            </div>
                        </div>

                        <!-- Sección para imágenes adjuntas -->
                        <div class="row mt32">
                            <h4>Imágenes Adjuntas:</h4>
                            <div class="image-gallery">
                                <t t-foreach="doc.image_ids" t-as="image">
                                    <div class="image-section">
                                        <!-- Solución al error de concatenación de bytes con str -->
                                        <img t-att-src="'data:image/png;base64,' + image.image.decode('utf-8')" alt="Adjunto" class="img-fluid"/>
                                    </div>
                                </t>
                            </div>
                        </div>

                        <!-- Estilos mejorados para alinear el contenido a la izquierda -->
                        <style>
                            .page {
                                text-align: left;
                                margin: 0;
                                padding: 0;
                            }
                            .image-section img {
                                max-width: 200px;
                                max-height: 200px;
                                margin-bottom: 10px;
                                display: block;
                                object-fit: cover;
                            }
                            .image-gallery {
                                display: flex;
                                flex-wrap: wrap;
                                gap: 10px;
                            }
                            table {
                                border-collapse: collapse;
                                width: 100%;
                                margin-left: 0px; /* Asegurarse de que la tabla esté alineada a la izquierda */
                            }
                            th, td {
                                padding: 8px;
                                text-align: left;
                                border: 1px solid #ddd;
                                margin-left: 0px; /* Asegurarse de que el texto dentro de las celdas esté alineado a la izquierda */
                            }
                            .col-12 {
                                width: 100%;
                            }
                            .row {
                                width: 100%;
                            }
                        </style>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Registro del reporte -->
    <record id="action_report_work_order" model="ir.actions.report">
        <field name="name">Orden de Trabajo</field>
        <field name="model">work.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">my_order_module.order_report_template</field>
        <field name="print_report_name">'Orden de Trabajo - ' + (object.title or '')</field>
    </record>
</odoo>
