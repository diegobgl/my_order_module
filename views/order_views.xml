<record id="view_work_order_form" model="ir.ui.view">
    <field name="name">work.order.form</field>
    <field name="model">work.order</field>
    <field name="arch" type="xml">
        <form>
            <!-- Agregamos el statusbar y los botones de acción -->
            <header>
                <button name="action_start" type="object" string="Iniciar" 
                        class="btn-primary" states="draft"/>
                <button name="action_done" type="object" string="Terminar" 
                        class="btn-success" states="in_progress"/>
                <button name="action_cancel" type="object" string="Cancelar" 
                        class="btn-danger" states="draft,in_progress"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done,cancel"/>
            </header>
            <sheet>
                <group>
                    <group>
                        <field name="title"/>
                        <field name="order_number" readonly="1"/>
                        <field name="sale_order_id" options="{'no_create': True}"/>
                        <field name="client_id"/>
                        <field name="worker_id"/>
                    </group>
                    <group>
                        <field name="date"/>
                        <field name="address"/>
                        <field name="city"/>
                        <field name="time_block"/>
                        <field name="value" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                    </group>
                </group>
                <notebook>
                    <page string="Productos">
                        <field name="product_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="price_unit"/>
                                <field name="subtotal"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Imágenes">
                        <field name="image_ids">
                            <tree editable="bottom">
                                <field name="image" widget="image" class="oe_avatar"/>
                                <field name="description"/>
                            </tree>
                            <form>
                                <sheet>
                                    <group>
                                        <field name="image" widget="image"/>
                                        <field name="description"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
    </field>
</record>